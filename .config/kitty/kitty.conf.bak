# vim:fileencoding=utf-8:ft=conf:foldmethod=marker

font_family      PragmataPro Mono Liga
bold_font        auto
italic_font      auto
bold_italic_font auto

font_size 14.0
macos_thicken_fonts 0
url_style curly

copy_on_select yes
sync_to_monitor yes

hide_window_decorations titlebar-only

window_margin_width 0 3
window_padding_width 0 3
window_border_width 0

background_opacity 1
dynamic_background_opacity no

copy_on_select clipboard
macos_option_as_alt yes

map cmd+n       new_os_window
map cmd+w       close_window
map cmd+shift+equal     change_font_size all +1.0
map cmd+shift+minus     change_font_size all -1.0
map cmd+shift+backspace change_font_size all 0

map cmd+equal     change_font_size current +1.0
map cmd+minus     change_font_size current -1.0
map cmd+backspace change_font_size current 0

# The cursor color
# cursor #da39ac

# The foreground color
# foreground #b4b4b9

# The background color
# background #020221

# The foreground for selections
# selection_foreground #36363a

# The background for selections
# selection_background #ddcfbf

# The 16 terminal colors. There are 8 basic colors, each color has a dull and
# bright version.

# black
# color0   #000004
# color8   #020221

# red
# color1   #ff3600
# color9   #ff8e78

# green
# color2   #718e3f
# color10  #b1bf75

# yellow
# color3   #ffc552
# color11  #ffd392

# blue (purple and blue!)
# color4  #635196
# color12 #99a4bc

# magenta (orange)
# color5   #ff761a
# color13  #ffb07b

# cyan
# color6   #34bfa4
# color14  #8bccbf

# white
# color7   #b4b4b9
# color15  #f8f8ff

# Mouse & cursor
cursor_blink_interval     0.4
cursor_stop_blinking_after 0
cursor_shape block
mouse_hide_wait 10.0

scrollback_lines 10000
scrollback_pager less +G -R
scrollback_in_new_tab no

# Wheel scroll multiplier (modify the amount scrolled by the mouse wheel). Use negative
# numbers to change scroll direction.
wheel_scroll_multiplier 5.0

# The interval between successive clicks to detect double/triple clicks (in seconds)
click_interval 0.5

#Select for double clicking
select_by_word_characters :@-./_~?&=%+#

#don't care, use i3.
focus_follows_mouse no
remember_window_size yes
enabled_layouts *
initial_window_width   1024
initial_window_height  600

# 10 yields ~100 FPS which is more than sufficient for most uses.
repaint_delay    10

# Delay (in milliseconds) before input from the program running in the terminal
# is processed.
input_delay 3

#bell
# visual_bell_duration 0.1
enable_audio_bell no

# The modifier keys to press when clicking with the mouse on URLs to open the URL
open_url_modifiers ctrl
open_url_with default

confirm_os_window_close 0
use_system_wcwidth yes

# The value of the TERM environment variable to set
term xterm-kitty

#window decorations
# active_border_color #020122
# inactive_border_color #020122

# Tab-bar colors
# active_tab_foreground #000
# active_tab_background #eee
# inactive_tab_foreground #444
# inactive_tab_background #999

# Clipboard
map ctrl+shift+v        paste_from_clipboard
map ctrl+shift+s        paste_from_selection
map ctrl+shift+c        copy_to_clipboard
map shift+insert        paste_from_selection
map ctrl+shift+o      pass_selection_to_program google-chrome


# BEGIN_KITTY_THEME
# 1984 Dark
include current-theme.conf
# END_KITTY_THEME
